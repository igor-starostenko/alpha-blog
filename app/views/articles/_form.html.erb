<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <%= form_for(@article, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :title %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :description %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_area :description, class: 'form-control', placeholder: 'Description', rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: 'checkbox-inline input_checkbox') do %>
                  <% cb.check_box(class: 'checkbox') + cb.text %>
              <% end %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-group'>
          <div class='col-sm-10 col-sm-offset-2'>
            <%= f.submit class: 'btn btn-primary btn-lrg' %>
          </div>
        </div>
      </div>
  <% end %>
  <div class='col-sm-2 col-xs-offset-2'>
    [ <%= link_to 'Cancel', articles_path %> ]
  </div>
</div>
